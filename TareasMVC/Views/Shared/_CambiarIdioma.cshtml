@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using TareasMVC.Services
@inject IViewLocalizer _localizer

@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var urlRetorno = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{ Context.Request.Path.Value }";
}

<form 
    asp-controller="Home" 
    asp-action="CambiarIdioma" 
    asp-route-urlRetorno="@urlRetorno"
    method="post"
    class="form-horizontal"
    role="form"
    style="display: inline"
>
    <label>@_localizer["Idioma"]</label>
    <select 
        name="cultura" 
        asp-for="@requestCulture.RequestCulture.UICulture.Name"
        id="cultura"
        onchange="this.form.submit()"
        asp-items="Constantes.CulturasUISoportadas"
    >
    </select>
</form>